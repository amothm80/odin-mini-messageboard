<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
    <title>Mini Message Board</title>
  </head>
  <body>
    <div class="header"><%-include('header')%> <%-include('nav')%></div>
    <div class="main">
      <form class="form-card" action="/new" method="POST">
        <label for="text">Message</label
        ><textarea type="textarea" name="text" id="text"></textarea>
        <% let error = errors.find((el)=>{return el.path == 'text'}) %> <%if
        (error){ %>
        <div class="err"><%= error.msg %></div>
        <%}%>
        <label for="user">User</label
        ><input type="text" name="user" id="user" />
        <%  error = errors.find((el)=>{return el.path == 'user'}) %> <%if
        (error){ %>
        <div class="err"><%= error.msg %></div>
        <%}%>
        <input type="submit" value="Submit" />
      </form>
    </div>
  </body>
</html>
